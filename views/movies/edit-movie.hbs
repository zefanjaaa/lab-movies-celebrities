<h2>Edit a movie! </h2>

<form action="/movies/{{id}}/edit" method="post" id="form1">
<label for="">
Title:
<input type="text" name="title" value="{{title}}">
</label>
<label for="">
    Genre:
    <input type="text" name="Genre" value="{{genre}}">
</label>
Plot:
<input type="text" name="plot" value="{{plot}}">
<label for="">
    Cast:
    <select name="cast_id" multiple>
        {{#each editMovie}}
        <option value="{{cast_id}}"> {{name}}</option>
        {{/each}}
    </select>
    
</label>
<button type="submit" form="form1" value="Submit"> Edited movie</button>
</form>

